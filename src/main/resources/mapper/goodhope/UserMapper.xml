<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springbootdemo.mapper.goodhope.UserMapper" >
    <resultMap id="BaseResultMap" type="com.example.springbootdemo.pojo.goodhope.User" >
        <id column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="phone" property="phone" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
        user_id, user_name, password, phone
    </sql>
    <!-- 这个方法是我自己加的 -->
    <select id="selectAllUser" resultType="com.example.springbootdemo.pojo.goodhope.User">
        select
        <include refid="Base_Column_List" />
        from t_user
    </select>
</mapper>